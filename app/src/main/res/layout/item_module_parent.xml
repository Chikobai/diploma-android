<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemModuleParentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="1.Introduction"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemModuleParentDownload"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemModuleParentSubTitle"
        app:layout_constraintEnd_toStartOf="@+id/itemModuleParentArrow"
        app:layout_constraintTop_toTopOf="@+id/itemModuleParentTitle"
        app:srcCompat="@drawable/ic_cloud" />

    <ImageView
        android:id="@+id/itemModuleParentArrow"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:tint="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/itemModuleParentSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemModuleParentTitle"
        app:srcCompat="@drawable/ic_upanddown" />

    <TextView
        android:id="@+id/itemModuleParentSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingStart="12dp"
        android:text="@string/point"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemModuleParentTitle"
        app:layout_constraintTop_toBottomOf="@+id/itemModuleParentTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>